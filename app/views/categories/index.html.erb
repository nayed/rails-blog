<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>Name</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |cat| %>
      <tr>
        <td><%= cat.id %></td>
        <td><%= cat.name %></td>
        <td>
          <%= link_to "Edit", edit_category_path(cat.id), class: "btn btn-primary" %>
          <%= link_to "Delete", category_path(cat.id), class: "btn btn-danger", method: :delete, data: { confirm: "U sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "Create Category", new_category_path, class: "btn btn-success" %>
</p>